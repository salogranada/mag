<div id="<%= dom_id post %>">
  <p>
    <h3> <%= post.title %>  </h3> 
    <%if user_signed_in? && (current_user.is_admin? || current_user.is_editor?) %>
     <%= post.state %> 
    <%end %>
  </p>
  
  <strong>
    written by: <%= post.user.first_name %> <%= post.user.last_name %> | <%= post.user.email %>
  </strong>

  <p class="fst-italic">
      <%= post.description %>
  </p>

</div>
