<p style="color: green"><%= notice %></p>

<div class="container">


  <%= render @post %>

  <p>
    <%= @post.body %>
  </p>

</div>

<div class="container text-center">
  <div class="row">
    <div class="col">
      <%= link_to "Back to posts", posts_path,class:"btn btn-secondary" %>
    </div>
    <div class="col">
        <%if user_signed_in? %>
          <%if current_user.is_editor? || current_user.is_admin? %>
            <%= link_to "Edit this post", edit_post_path(@post),class:"btn btn-primary"  %>
          <%end%>
        <%end%>
    </div>
    <%if user_signed_in? && current_user.is_admin? %>
      <div class="col">
        <%if @post.may_publish?%>
          <%= button_to "Publish", "/posts/#{@post.id}/publish", method: :put, class:"btn btn-warning" %>
        <%else%>
          <%= button_to "Make draft", "/posts/#{@post.id}/unpublish", method: :put, class:"btn btn-warning" %>
        <%end%>
      </div>
      <div class="col">
          <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-danger"%>
      </div>
    <%end%>
  </div>
</div>


<div class="container">
    <h4> Comments</h4>
    <div class="mb-3">
      <%= render 'comments/form' %> 
    </div>
    <div class="mb-3">
      <h5> Previous Comments: </h5>
      <%= render "posts/comments" %>
    </div>
</div>